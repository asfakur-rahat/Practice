<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Practice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheet</item>
    </style>

    <style name="Theme.Practice" parent="Base.Theme.Practice" />

    <style name="CustomBottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundUpperCorner</item>
    </style>
    <style name="RoundUpperCorner" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/UpperRoundCorner</item>
    </style>
    <style name="UpperRoundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_13sdp</item>
        <item name="cornerSizeTopRight">@dimen/_13sdp</item>
    </style>

    <style name="ubuntu_bold_36">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/_28ssp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ubuntu_bold_22">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ubuntu_regular_16">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="inter_regular_14">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="inter_medium_14">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="inter_regular_13">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="inter_regular_17">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="inter_medium_17">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    
    <style name="customDropdown" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@color/ash</item>
    </style>


    <style name="NoUnderlineTextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="NoUnderlineDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="backgroundColor">@color/ash</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextAppearance">@style/inter_regular_14</item>
        <item name="hintTextColor">@color/light_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="endIconTint">@color/light_grey</item>
    </style>



</resources>